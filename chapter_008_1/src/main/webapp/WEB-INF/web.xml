<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
         http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
    <!--servlets-->
    <servlet>
        <servlet-name>loging in system</servlet-name>
        <servlet-class>ru.job4j.sellboard.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loging in system</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout from system</servlet-name>
        <servlet-class>ru.job4j.sellboard.controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout from system</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Create a new user</servlet-name>
        <servlet-class>ru.job4j.sellboard.controller.CreateUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Create a new user</servlet-name>
        <url-pattern>/createUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>List of cars</servlet-name>
        <servlet-class>ru.job4j.sellboard.controller.CarsController</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>List of cars</servlet-name>
        <url-pattern>/carsList</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Create a new ad</servlet-name>
        <servlet-class>ru.job4j.sellboard.controller.CreateAdController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Create a new ad</servlet-name>
        <url-pattern>/createAd</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Update a current ad</servlet-name>
        <servlet-class>ru.job4j.sellboard.controller.UpdateAdController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Update a current ad</servlet-name>
        <url-pattern>/updateAd</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>List of cars of a current user</servlet-name>
        <servlet-class>ru.job4j.sellboard.controller.MyCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>List of cars of a current user</servlet-name>
        <url-pattern>/myCarsList</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Load a photo</servlet-name>
        <servlet-class>ru.job4j.sellboard.controller.LoadPhotoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Load a photo</servlet-name>
        <url-pattern>/loadPhoto</url-pattern>
    </servlet-mapping>

    <!--filters-->
    <filter>
        <filter-name>Authentification filter</filter-name>
        <filter-class>ru.job4j.sellboard.controller.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Authentification filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--listeners-->
    <listener>
        <listener-class>ru.job4j.sellboard.controller.SettingUpListner</listener-class>
    </listener>
    <listener>
        <listener-class>ru.job4j.sellboard.controller.ScrollListner</listener-class>
    </listener>

    <!--Contex parameters-->
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>c:\Tools\apache-tomcat-8.5.32\webapps\data\</param-value>
    </context-param>
</web-app>
